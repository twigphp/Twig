--TEST--
macro with arbitrary arguments
--TEMPLATE--
{% from _self import test1, test2 %}

{% macro test1(var) %}
    {{- var }}: {{ varargs|join(", ") }}
{% endmacro %}

{% macro test2() %}
    {{- varargs|join(", ") }}
{% endmacro %}

{{ test1("foo", "bar", "foobar") }}
{{ test2("foo", "bar", "foobar") }}
--DATA--
return array();
--EXPECT--
foo: bar, foobar

foo, bar, foobar
